{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="text-center">
            <h1>Liste des comptes utilisateurs</h1>
        </div>

        <table class="table table-striped mt-5">
                <thead>
                    <tr class="text-center">
                        <th scope="col">Nom</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Date de naissance</th>
                        <th scope="col">Actions</th>               
                    </tr>
                </thead>
                <tbody>
                    {% for client in users %}
                        <tr class="text-center">
                            <th scope="row">{{ client.firstname }} </br></th>
                            <td>{{ client.lastname }}</td>
                            <td>{{ client.birthday ? client.birthday|date('d F Y') : '' }}</td>
                            <td class=" d-flex justify-content-center">
                                <a href="{{ path('admin-show', {'id': client.id}) }}" class="btn btn-outline-info mr-3" role="button" aria-pressed="true">Voir</a>
                                {{ include('admin/_delete.html.twig') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('admin-new') }}">Créer</a>
    </div>
{% endblock %}