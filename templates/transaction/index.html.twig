{% extends 'base.html.twig' %}

{% block title %}Opérations{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-start mt-2">
            <a href="{{ path('account') }}" class="btn btn-outline-danger" role="button" aria-pressed="true">Retour</a>
        </div>

        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row justify-content-md-center mt-5">
            <h1>Opérations bancaires</h1>
        </div>

        <div class="justify-content-start mt-5">
            <a href="{{ path('benificiary') }}" class="btn btn-outline-info" role="button" aria-pressed="true">Ajouter un nouveau bénéficiaire</a>
        </div>

        {{ form_start(form) }}
            <div class="row justify-content-md-center mt-5">
                    {{ form_widget(form.debitAccount) }}
                    {{ form_widget(form.creditAccount, {'attr': {'class': 'mt-3'}}) }}
                    {{ form_widget(form.amount, {'attr': {'class': 'mt-3'}}) }}
            </div>

            <div class="row justify-content-md-end">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-outline-info mt-3'}}) }}
            </div>
        {{ form_end(form) }}

    </div>
{% endblock %}
