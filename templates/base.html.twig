<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Banque Couteleau{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light primary">
		<div class="container-fluid">
			<nav class="navbar navbar-light primary">
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarExample01" aria-controls="navbarExample01" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
				</button>
			</nav>
			<a class="collapse navbar-collapse navbar-brand" href="{{ path('home') }}">Banque Couteleau</a>
			<div class="collapse navbar-collapse py-2" id="navbarExample01">
				<ul class="navbar-nav mr-auto mb-2 mb-lg-0">
					{% if is_granted('ROLE_ADMIN') %}
						<li class="nav-item">
							<a href="{{ path('admin-index') }}" class="nav-link">Admin</a>
						</li>
					{% endif %}
				</ul>
			</div>
            {% if not app.user %}
			    <a href="{{ path('app_login') }}" class="btn btn-outline-success mr-md-2" role="button" aria-pressed="true">Se connecter</a>
            {% else %}
                <a href="{{ path('account') }}" class="btn btn-outline-success mr-md-2" role="button" aria-pressed="true">Mon compte</a>
			    <a href="{{ path('app_logout') }}" class="btn btn-outline-danger" role="button" aria-pressed="true">DÃ©connexion</a>
            {% endif %}
        </div>
	</nav>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
