{% extends 'base.html.twig' %}

{% block title %}Ajout de bénéficiaire{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-start mt-2">
            <a href="{{ path('transaction') }}" class="btn btn-outline-danger" role="button" aria-pressed="true">Retour</a>
        </div>

        <div class="row justify-content-md-center mt-5">
            <h1>Ajouter un bénéficiaire</h1>
        </div>

        {{ form_start(form) }}
            <div class="row justify-content-md-center mt-5">
                    {{ form_widget(form.lastname) }}
                    {{ form_widget(form.firstname, {'attr': {'class': 'mt-3'}}) }}
                    {{ form_widget(form.bic, {'attr': {'class': 'mt-3'}}) }}
                    {{ form_widget(form.iban, {'attr': {'class': 'mt-3'}}) }}
            </div>

            <div class="row justify-content-md-end">
                {{ form_widget(form.send, {'attr': {'class': 'btn btn-outline-info mt-3'}}) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
